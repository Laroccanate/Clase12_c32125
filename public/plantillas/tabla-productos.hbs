<style>
    .table td,
    .table th {
        vertical-align: middle;
    }
</style>

{{#if products.length}}
<h2>Lista de Productos</h2>
<div class="table-responsive">
    <table class="table table-dark">
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Foto</th>
        </tr>
        {{#each products}}
  <tr>
    <td>{{id}}</td>
    <td>{{title}}</td>
    <td>{{price}}</td>
    <td><img src={{thumbnail}} width="50px" height="50px"></td>
  </tr>
  {{/each}}
    </table>
</div>
{{/if}}